<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/detailsLayout"
        android:orientation="horizontal"
        android:weightSum="100">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:scaleType="centerCrop"
            android:src="@drawable/menorah"
            android:id="@+id/imageholder"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="60"
            android:padding="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credentials"
                android:textSize="16dp"
                android:textColor="@color/colorPrimary"
                android:id="@+id/titletext"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="February 21, 2018"
                android:textSize="13dp"
                android:id="@+id/datetext"
                android:layout_marginTop="3dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I have been told that I have been told that i have a lot of issues to deal wwith so far as I am concerned I have been told that i have a lot of issues to deal wwith so far as I am concerned"
                android:textSize="12dp"
                android:id="@+id/contenttext"
                android:layout_marginTop="15dp"
                android:textColor="@color/ash"/>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>